<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.leo.robot"
          android:installLocation="auto"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera"/> <!-- 使用照相机权限 -->
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/> <!-- 自动聚焦权限 -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.CAMERA"/> <!-- 相机 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> <!-- 写入sdcard -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>


    <uses-permission
        android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions"/>


    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>


    <application
        android:name=".App"
        android:allowBackup="true"
        android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection|density"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/robot"
        android:isGame="true"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:roundIcon="@mipmap/robot1"
        android:screenOrientation="fullSensor"
        android:supportsRtl="true"
        android:theme="@style/CMVP_FullTheme">
        <activity android:name=".ui.wire_stripping.WireStrippingActivity">

        </activity>

        <!--<service-->
        <!--android:name=".service.NettyService"-->
        <!--android:enabled="true"-->
        <!--android:exported="true"/>-->

        <activity
            android:name=".ui.launcher.LauncherActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@style/CMVP_FullTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <meta-data
                android:name="unityplayer.UnityActivity"
                android:value="true"/>
            <meta-data
                android:name="unity.build-id"
                android:value="89a71784-f61e-4af8-8ddf-0b9bb74b0ebe"/>
            <meta-data
                android:name="unity.splash-mode"
                android:value="0"/>
            <meta-data
                android:name="unity.splash-enable"
                android:value="True"/>
            <meta-data
                android:name="android.max_aspect"
                android:value="2.1"/>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.controller.ControllerActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.cleaning.CleaningActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.cut_line.CutLineActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".test.TestActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.wiring.WiringActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.setting.cut_line_setting.CutLineSettingActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.setting.wiring_setting.WiringSettingActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.setting.wiring_stripping_setting.WiringStrippingSettingActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.wire_stripping.choose.WireStrippingChooseLocationActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.wiring.choose.WiringChooseLocationActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.cut_line.choose.CutLineChooseLocationActivity"
            android:screenOrientation="landscape"/>
    </application>

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="28"/>

    <uses-feature android:glEsVersion="0x00020000"/>
    <uses-feature
        android:name="android.hardware.vulkan"
        android:required="false"/>


    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false"/>
    <uses-feature
        android:name="android.hardware.touchscreen.multitouch"
        android:required="false"/>
    <uses-feature
        android:name="android.hardware.touchscreen.multitouch.distinct"
        android:required="false"/>
</manifest>

