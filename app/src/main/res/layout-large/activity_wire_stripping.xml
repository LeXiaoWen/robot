<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <include layout="@layout/activity_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:weightSum="9">
        <!--就绪-->
        <TextView
            android:id="@+id/tv_ready"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/cmvp_yellow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="就绪"
            android:textColor="@color/cmvp_black"
            android:textSize="@dimen/sp_8"/>
        <!--初始化东西-->
        <TextView
            android:id="@+id/tv_init"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/cmvp_yellow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="初始化动作"
            android:textColor="@color/cmvp_black"
            android:textSize="@dimen/sp_8"/>
        <!--就位-->
        <TextView
            android:id="@+id/tv_in_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/cmvp_yellow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="剥线工具就位"
            android:textColor="@color/cmvp_black"
            android:textSize="@dimen/sp_8"/>
        <!--主线夹紧-->
        <TextView
            android:id="@+id/tv_clamping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/cmvp_yellow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="主线夹紧"
            android:textColor="@color/cmvp_black"
            android:textSize="@dimen/sp_8"/>
        <!--夹具闭合-->
        <TextView
            android:id="@+id/tv_closure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/cmvp_yellow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="夹具闭合"
            android:textColor="@color/cmvp_black"
            android:textSize="@dimen/sp_8"/>
        <!--旋转剥皮-->
        <TextView
            android:id="@+id/tv_peeling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/cmvp_yellow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="旋转剥皮"
            android:textColor="@color/cmvp_black"
            android:textSize="@dimen/sp_8"/>
        <!--切断绝缘皮-->
        <TextView
            android:id="@+id/tv_cut_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/cmvp_yellow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="切断绝缘皮"
            android:textColor="@color/cmvp_black"
            android:textSize="@dimen/sp_8"/>
        <!--解锁-->
        <TextView
            android:id="@+id/tv_unlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/cmvp_yellow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="解锁"
            android:textColor="@color/cmvp_black"
            android:textSize="@dimen/sp_8"/>
        <!--结束-->
        <TextView
            android:id="@+id/tv_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/cmvp_yellow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="结束"
            android:textColor="@color/cmvp_black"
            android:textSize="@dimen/sp_8"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <SurfaceView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">
            <!--急停或解除急停-->
            <Button
                android:id="@+id/btn_scram"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="急停"/>
            <!--一键回收-->
            <Button
                android:id="@+id/btn_recover"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:text="一键收回"/>
            <!--开始-->
            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:text="开始"/>
            <!--获取当前帧-->
            <Button
                android:id="@+id/btn_get_pic"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:text="获取当前帧"/>

            <!--手动设置-->
            <Button
                android:id="@+id/btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:text="手动设置"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>