<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">

    <include layout="@layout/activity_title"/>


    <RelativeLayout
            android:layout_marginLeft="16dp"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="640dp"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_con"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="滑台控制"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:id="@+id/ll_1"
                android:layout_toRightOf="@id/tv_con"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="#EA3340"
                    android:textSize="@dimen/sp_12"
                    android:text="行线距离 ： "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                   android:text="--"
                    android:textColor="#EA3340"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_toRightOf="@id/ll_1"
                android:layout_marginLeft="@dimen/dp_40"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="#EA3340"
                    android:textSize="@dimen/sp_12"
                    android:text="引流线距离 ： "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="--"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#EA3340"
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_video"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="行线画面"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <RelativeLayout
                android:focusableInTouchMode="true"
                android:id="@+id/rl_main"
                android:layout_width="640dp"
                android:layout_height="480dp"
                android:layout_marginLeft="16dp"
                android:background="@color/black">


            <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_6"
                    android:text="USB1画面"
                    android:textColor="@color/cmvp_white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
        </RelativeLayout>




        <LinearLayout
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:orientation="vertical">


            <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_12"
                            android:text="水平滑台 ： "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:text="--"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:id="@+id/tv_table1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_12"
                            android:text="垂直滑台 ： "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:text="--"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_12"
                            android:id="@+id/tv_table2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>


            <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="水平滑台控制"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/ll_level"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/btn_left"
                        android:text="向左"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btn_right"
                        android:text="向右"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btn_horizontal_reset"
                        android:text="水平复位"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="垂直滑台控制"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/ll_vertical"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/btn_up"
                        android:text="向上"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btn_down"
                        android:text="向下"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btn_vertical_reset"
                        android:text="垂直复位"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="切换视频"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_below="@id/rl_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:id="@+id/ib_1"
                            android:layout_gravity="center"
                            android:src="@drawable/left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageButton
                            android:id="@+id/ib_2"
                            android:layout_marginLeft="@dimen/dp_80"
                            android:layout_gravity="center"
                            android:src="@drawable/right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_back"
                    android:layout_width="251dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="184dp"
                    android:src="@drawable/xuandianfanhui_normal"/>

            <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="104dp"
                    android:id="@+id/ll_status"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_type"
                        tools:text="与服务器断开，正在重连"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <com.github.ybq.android.spinkit.SpinKitView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spin_kit"
                        style="@style/SpinKitView.Small.FadingCircle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:SpinKit_Color="#000000"/>

            </LinearLayout>


            <TextView
                    android:visibility="gone"
                    android:layout_width="239dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="121dp"
                    android:singleLine="false"
                    android:text="操作说明：请在待识别图片上点击剥线位置然后按“确认选点”。"
                    android:textColor="#000000"
                    android:textSize="15sp"/>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>