<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="672dp"
        android:layout_height="377dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/black">
        <include layout="@layout/web_error_main"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_6"
                android:text="行线画面"
                android:textColor="@color/cmvp_white"
                android:textSize="@dimen/sp_8"
                android:textStyle="bold"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="672dp"
        android:layout_height="111dp"
        android:layout_below="@id/rl_main"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="167dp"
            android:layout_height="111dp"
            android:background="@color/black">
            <include layout="@layout/web_error1"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_6"
                    android:text="云台画面"
                    android:textColor="@color/cmvp_white"
                    android:textSize="@dimen/sp_8"
                    android:textStyle="bold"
            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="167dp"
            android:layout_height="111dp"
            android:layout_marginLeft="@dimen/dp_2"
            android:background="@color/black">
            <include layout="@layout/web_error2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_6"
                    android:text="引流线画面"
                    android:textColor="@color/cmvp_white"
                    android:textSize="@dimen/sp_8"
                    android:textStyle="bold"
            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="167dp"
            android:layout_height="111dp"
            android:layout_marginLeft="@dimen/dp_2"
            android:background="@color/black">
            <include layout="@layout/web_error3"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_6"
                    android:text="主臂画面"
                    android:textColor="@color/cmvp_white"
                    android:textSize="@dimen/sp_8"
                    android:textStyle="bold"
            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="167dp"
            android:layout_height="111dp"
            android:layout_marginLeft="@dimen/dp_2"
            android:background="@color/black">
            <include layout="@layout/web_error4"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_6"
                    android:text="从臂画面"
                    android:textColor="@color/cmvp_white"
                    android:textSize="@dimen/sp_8"
                    android:textStyle="bold"
            />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>