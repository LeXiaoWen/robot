        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="167dp"
            android:layout_height="111dp"
            android:layout_marginLeft="@dimen/dp_2"
            android:background="@color/black"/>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="167dp"
            android:layout_height="111dp"
            android:layout_marginLeft="@dimen/dp_2"
            android:background="@color/black"/>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="167dp"
            android:layout_height="111dp"
