<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginBottom="14dp"
        tools:ignore="MissingDefaultResource">

    <include layout="@layout/fg_video_item"/>

    <LinearLayout
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="14dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp">

            <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_tool_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="末端工具中心点（TCP)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="31dp">


                <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X1"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>

                <TextView
                        android:id="@+id/tv2"
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/tv1"
                        android:gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/tv2"
                        android:text="mm"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="31dp">


                <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y2"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>

                <TextView
                        android:id="@+id/tv4"
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/tv3"
                        android:gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/tv4"
                        android:text="mm"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="31dp">


                <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Z3"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>

                <TextView
                        android:id="@+id/tv6"
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/tv5"
                        android:gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/tv6"
                        android:text="mm"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="31dp">


                <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RX1"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>

                <TextView
                        android:id="@+id/tv8"
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/tv7"
                        android:gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/tv8"
                        android:text="rad"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="31dp">


                <TextView
                        android:id="@+id/tv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RY2"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>

                <TextView
                        android:id="@+id/tv10"
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/tv9"
                        android:gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/tv10"
                        android:text="rad"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="31dp">


                <TextView
                        android:id="@+id/tv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RZ3"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>

                <TextView
                        android:id="@+id/tv12"
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/tv11"
                        android:gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/tv12"
                        android:text="rad"
                        android:textColor="#493E39"
                        android:textSize="@dimen/sp_10"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="243dp"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="机器人模式: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_mode"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        tools:text="UPDATING_FIRMWARE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="安全模式: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_safe_mode"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        tools:text="UPDATING_FIRMWARE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="程序状态: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_status"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        tools:text="UPDATING_FIRMWARE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                <ImageButton
                        android:id="@+id/iv1"
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/xiangshang_normal"/>

                <ImageButton
                        android:layout_marginLeft="10dp"
                        android:id="@+id/iv2"
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/xiangxia_normal"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="6dp">

                <ImageButton
                        android:id="@+id/iv3"
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/xiangzuo_normal"/>

                <ImageButton
                        android:layout_marginLeft="10dp"
                        android:id="@+id/iv4"
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/xiangyou_normal"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="6dp">

                <ImageButton
                        android:id="@+id/iv5"
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/xiangqian_normal"/>

                <ImageButton
                        android:layout_marginLeft="10dp"
                        android:id="@+id/iv6"
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/xianghou_normal"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>